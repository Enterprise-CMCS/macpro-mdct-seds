/* Visit https://www.typescriptlang.org/tsconfig/ to read more about this file. */
{
  "$schema": "https://json.schemastore.org/tsconfig",
  /*
   * This config is only used for coordinating runs & other repo-level stuff.
   * The individual services have their own tsconfig files.
   */
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* The only special thing in this config is where we put the built files. */
    "outDir": "build_dev",
  }
}
